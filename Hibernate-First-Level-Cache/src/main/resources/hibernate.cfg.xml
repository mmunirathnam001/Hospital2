<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">7670</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/munidb</property>
        <property name="format_sql">false</property>
        <property name="show_sql">true</property>
        <mapping class="com.javabycode.hibernate.model.Student"/>
        <mapping class="com.javabycode.hibernate.model.Student1"/>
        <mapping class="com.javabycode.hibernate.model.Student2"/>
                
        
    </session-factory>
</hibernate-configuration>